<tr>
  <td><%= question.body %></td>
  <td><%= link_to t('.link_to.show'), admin_question_path(question), class: "btn btn-secondary btn-sm"  %></td>
  <td><%= link_to t('.link_to.edit'), edit_admin_question_path(question), class: "btn btn-secondary btn-sm"  %></td>
  <td>
    <%= link_to t('.link_to.delete'),
                admin_question_path(question),
                method: :delete,
                data: { confirm: t('.confirm.delete') },
                class: "btn btn-danger btn-sm" %>
  </td>
</tr>
