<h1><%= @question.test.title %> Question</h1>

<p>
  <%= @question.body %><br>
</p>

<h2><%= t('.header')%></h2>

<p>
  <%= link_to t('.link_to.new'), new_admin_question_answer_path(@question) %>
</p>

<ol>
  <%= render @question.answers %>
</ol>

<p>
  <%= link_to t('.link_to.edit'), edit_admin_question_path(@question) %> |
  <%= link_to t('.link_to.back'), admin_test_path(@question.test) %>
</p>
