<td><%= image_tag(badge.picture_url, height: "60") %></td>
<td>
  <%= content_tag :span, badge.name, class: 'resource-title', data: { resource_id: badge.id } %>
  <% badge = (badge == @badge ? @badge : badge) %>
  <%= render 'shared/form_inline', model: [:admin, badge],
                                   url: update_inline_admin_badge_path(badge),
                                   resource: badge,
                                   field: :name %>
</td>
<td><%= link_to t('.link_to.show'), admin_badge_path(badge), class: "btn btn-secondary btn-sm" %></td>
<td>
  <%= link_to t('.link_to.edit'),
              edit_admin_badge_path(badge),
              data: { resource_id: badge.id },
              class: "btn btn-secondary btn-sm form-inline-link" %>
</td>
<td>
  <%= link_to t('.link_to.delete'),
              admin_badge_path(badge),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-danger btn-sm" %>
</td>
